{
  "name": "Kiosk QR-kiosk-backend",
  "version": "1.0.0",
  "description": "Backend API for Kiosk QR Kiosk Catalog",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:prod": "prisma generate && prisma migrate deploy && tsc",
    "postinstall": "prisma generate",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate-manual": "tsx scripts/migrate-db.ts"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "kiosk",
    "api",
    "express",
    "prisma"
  ],
  "author": "Kiosk QR Team",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "prisma": "^6.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
