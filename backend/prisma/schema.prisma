generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id            String         @id @default(cuid())
  name          String         @unique // 'ustgiyim', 'altgiyim', 'elbise', 'takim'
  displayName   String         // Human-readable name
  products      Product[]
  subcategories Subcategory[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@map("categories")
}

model Subcategory {
  id          String    @id @default(cuid())
  name        String    // 'gomlek', 'ceket', etc.
  displayName String    // Human-readable name
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([categoryId, name])
  @@map("subcategories")
}

model Product {
  id            String         @id @default(cuid())
  title         String
  productCode   String         // Zorunlu
  shortDesc     String
  mainImageUrl  String
  categoryId    String
  subcategoryId String?
  brandId       String?        // Brand/Marka
  sizeRange     String
  price         String
  status        String         @default("pending") // "pending", "approved", "rejected"
  category      Category       @relation(fields: [categoryId], references: [id])
  subcategory   Subcategory?   @relation(fields: [subcategoryId], references: [id])
  brand         Brand?         @relation(fields: [brandId], references: [id])
  images        ProductImage[]
  variants      ProductVariant[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([categoryId])
  @@index([subcategoryId])
  @@index([brandId])
  @@index([status])
  @@map("products")
}

model ProductVariant {
  id         String   @id @default(cuid())
  productId  String
  sizeRange  String   // "32-40", "42-46"
  color      String   // "Siyah", "Beyaz"
  price      String   // "145$"
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([productId, sizeRange, color])
  @@index([productId])
  @@map("product_variants")
}

model ProductImage {
  id           String   @id @default(cuid())
  productId    String
  imageUrl     String
  displayOrder Int      @default(0)
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())

  @@index([productId])
  @@map("product_images")
}

model Brand {
  id        String       @id @default(cuid())
  name      String       @unique
  slug      String       @unique // URL-friendly name (e.g., 'Kiosk QR', 'brand-name')
  logo      String?      // Logo URL
  products  Product[]
  admins    AdminBrand[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@map("brands")
}

model Admin {
  id              String       @id @default(cuid())
  email           String       @unique
  password        String       // bcrypt hashed
  name            String
  role            String       @default("brand_admin") // 'super_admin' or 'brand_admin'
  requiresApproval Boolean     @default(true) // If true, products created by this user go to "pending"
  brands          AdminBrand[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@map("admins")
}

model AdminBrand {
  adminId   String
  brandId   String
  admin     Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)
  brand     Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@id([adminId, brandId])
  @@map("admin_brands")
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique // 'site_logo', 'site_name', etc.
  value     String   // URL or text value
  updatedAt DateTime @updatedAt

  @@map("settings")
}

model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique
  firstName   String
  lastName    String
  phone       String
  address     String
  brandSlug   String?
  totalAmount String?
  status      String      @default("pending")
  items       OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([status])
  @@index([createdAt])
  @@map("orders")
}

model OrderItem {
  id          String  @id @default(cuid())
  orderId     String
  productId   String
  productCode String
  title       String
  price       String
  sizeRange   String
  imageUrl    String
  quantity    Int     @default(1)
  variantId   String?
  color       String?
  order       Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@map("order_items")
}
